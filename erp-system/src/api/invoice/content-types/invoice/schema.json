{
  "kind": "collectionType",
  "collectionName": "invoices",
  "info": {
    "singularName": "invoice",
    "pluralName": "invoices",
    "displayName": "Invoice"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "invoice_status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "sent",
        "paid",
        "overdue",
        "cancelled"
      ]
    },
    "amount": {
      "type": "decimal"
    },
    "issued_date": {
      "type": "datetime"
    },
    "due_date": {
      "type": "date"
    },
    "paid_amount": {
      "type": "decimal",
      "default": 0
    },
    "invoice_number": {
      "type": "uid",
      "required": true
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer",
      "inversedBy": "invoices"
    },
    "sales_order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::sales-order.sales-order",
      "inversedBy": "invoices"
    },
    "transaction": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::transaction.transaction",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": ""
            },
            ""
          ]
        }
      },
      "inversedBy": "invoice"
    },
    "notes": {
      "type": "string"
    }
  }
}
