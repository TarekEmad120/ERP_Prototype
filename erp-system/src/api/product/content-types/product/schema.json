{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "sku": {
      "type": "string",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "unit_price": {
      "type": "decimal"
    },
    "stock_quantity": {
      "type": "integer"
    },
    "purchase_order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::purchase-order-item.purchase-order-item",
      "mappedBy": "product"
    },
    "sales_order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::sales-order-item.sales-order-item",
      "mappedBy": "product"
    },
    "stock_movements": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::stock-movement.stock-movement",
      "mappedBy": "product"
    }
  }
}
