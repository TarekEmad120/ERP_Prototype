{
  "kind": "collectionType",
  "collectionName": "purchase_orders",
  "info": {
    "singularName": "purchase-order",
    "pluralName": "purchase-orders",
    "displayName": "PurchaseOrder"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "po_number": {
      "type": "uid"
    },
    "po_status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "confirmed",
        "received",
        "closed"
      ]
    },
    "order_date": {
      "type": "datetime"
    },
    "total_amount": {
      "type": "decimal"
    },
    "purchase_order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::purchase-order-item.purchase-order-item",
      "mappedBy": "purchase_order"
    },
    "supplier": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::supplier.supplier",
      "inversedBy": "purchase_orders"
    }
  }
}
